MDScreen:
    name:"meter_owner"
    FloatLayout:
        Image:
            source:"images/image22.jpg"
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint:(1, 1)
            allow_stretch:True
            keep_ratio:False
        FloatLayout:
            MDIconButton:
                icon: "arrow-left"
                icon_size:"30dp"
                pos_hint: {"center_x": .075, "center_y": .93}
                on_release:
                    app.schedule_dashboard()
                    app.root.transition.direction  = "right"
                    app.root.current = "dashboard"
        FloatLayout:
            MDLabel:
                text:'METER NUMBER APPLICATION'
                pos_hint: {'center_x':.708, 'center_y':.93}
                theme_text_color:'Custom'
                text_color:(227/255, 207/255, 87/255, 255/255)
                font_size:"18sp"

        FloatLayout:
            MDCard:
                radius: 1, 1, 1, 1
                focus_behavior: True
                size_hint: .82, .050
                pos_hint: {"center_x": .52, "center_y": .753}
                md_bg_color: "#BDB76B"
                unfocus_color: "#BDB76B"
                focus_color: "#BDB76B"
                elevation: 4
                shadow_softness: 8
                shadow_offset: (-2, 2)
        FloatLayout:
            MDLabel:
                id:meter_number_label
                text:'Meter Numbers Selected'
                pos_hint: {'center_x':.73, 'center_y':.753}
                theme_text_color:'Custom'
                text_color:(250/255,235/255,215/255, 255/255)
                font_size:"18sp"
        FloatLayout:
            MDCard:
                radius: 1, 1, 1, 1
                focus_behavior: True
                size_hint: .82, .050
                pos_hint: {"center_x": .52, "center_y": .602}
                md_bg_color: "#BDB76B"
                unfocus_color: "#BDB76B"
                focus_color: "#BDB76B"
                elevation: 4
                shadow_softness: 8
                shadow_offset: (-2, 2)
        FloatLayout:
            MDIconButton:
                icon: "plus"
                icon_size:"30dp"
                theme_text_color: "Custom"
                text_color: rgba(105,105,105,255)
                pos_hint: {"center_x": .853, "center_y": .603}
                on_release:
                    app.plus()
        FloatLayout:
            MDIconButton:
                icon: "minus"
                icon_size:"40dp"
                theme_text_color: "Custom"
                text_color: rgba(105,105,105,255)
                pos_hint: {"center_x": .198, "center_y": .603}
                on_release:
                    app.minus()
        FloatLayout:
            MDRaisedButton:
                text: "            Submit             "
                theme_text_color: "Custom"
                text_color: (0/255, 0/255, 0/255, 1)
                md_bg_color: (0/255, 255/255, 255/255, 1)
                pos_hint:{'center_x':.5, 'center_y':.31}
                on_release:
                    app.submit_applied_meter()
        FloatLayout:
            MDLabel:
                id:meter_quantity_label
                text:'Quantity of Meters'
                pos_hint: {'center_x':.815, 'center_y':.603}
                theme_text_color:'Custom'
                text_color:(250/255,235/255,215/255, 255/255)
                font_size:"18sp"
        FloatLayout:
            MDTextField:
                id:till_number
                size_hint_x:None
                width:270
                # size_hint_y:.05
                pos_hint: {'center_x':.5, 'center_y':.474}
                hint_text: "Provide/Change Till Number"
                helper_text: "Optional: For Token Payment"
                helper_text_mode: "on_focus"