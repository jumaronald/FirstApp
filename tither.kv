<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(72), dp(72)
MDScreen:
    name:"tither_token"
    FloatLayout:
        Image:
            source:"images/image20.jpg"
            pos_hint:{"center_x":.5,"center_y":.5}
            size_hint:(1, 1)
            allow_stretch:True
            keep_ratio:False
        FloatLayout:
            MDIconButton:
                icon: "arrow-left"
                icon_size:"30dp"
                pos_hint: {"center_x": .075, "center_y": .96}
                on_release:
                    app.schedule_dashboard()
                    app.root.transition.direction  = "right"
                    app.root.current = "dashboard"
                    app.unschedule_tracking()
        FloatLayout:
            MDRectangleFlatIconButton:
                icon: "infinity"
                text: "           Unlimited Sharing          "
                theme_text_color: "Custom"
                text_color: (255/255, 255/255, 0/255, 1)
                line_color: rgba(255,255,0,255)
                theme_icon_color: "Custom"
                icon_color: rgba(255,255,0,255)
                pos_hint:{'center_x':.5, 'center_y':.765}
                on_release:
                    app.tither_mode = 1
                    # app.meter_tithering()
            MDRectangleFlatIconButton:
                icon: "clock-time-eight-outline"
                text: "          Sharing Start Time         "
                theme_text_color: "Custom"
                text_color: (255/255, 255/255, 0/255, 1)
                line_color: rgba(255,255,0,255)
                theme_icon_color: "Custom"
                icon_color: rgba(255,255,0,255)
                pos_hint:{'center_x':.5, 'center_y':.665}
                on_release:
                    app.tither_mode = 2
                    app.start_sharing()
            MDRectangleFlatIconButton:
                icon: "clock-time-eight-outline"
                text: "           Sharing Stop Time          "
                theme_text_color: "Custom"
                text_color: (255/255, 255/255, 0/255, 1)
                line_color: rgba(255,255,0,255)
                theme_icon_color: "Custom"
                icon_color: rgba(255,255,0,255)
                pos_hint:{'center_x':.5, 'center_y':.565}
                on_release:
                    app.tither_mode = 2
                    app.stop_sharing()
            MDRectangleFlatIconButton:
                icon: "share-variant"
                text: "       Token Based Sharing       "
                theme_text_color: "Custom"
                text_color: (255/255, 255/255, 0/255, 1)
                line_color: rgba(255,255,0,255)
                theme_icon_color: "Custom"
                icon_color: rgba(255,255,0,255)
                pos_hint:{'center_x':.5, 'center_y':.465}
                on_release:
                    app.tither_mode = 3
                    app.root.transition.direction  = "left"
                    app.root.current = "units_share"
                    # app.meter_tithering()

            MDRaisedButton:
                text: "               Submit                 "
                md_bg_color: (255/255, 48/255, 48/255, 1)
                halign:"center"
                pos_hint:{'center_x':.5,'center_y':.325}
                elevation:0
                on_release:
                    app.meter_tithering()

        FloatLayout:
            Check:
                active: True
                pos_hint: {'center_x': .88, 'center_y': .765}
            Check:
                pos_hint: {'center_x': .88, 'center_y': .665}
            Check:
                pos_hint: {'center_x': .88, 'center_y': .565}
        FloatLayout:
            MDLabel:
                text:'Share Your Electricity Token'
                pos_hint: {'center_x':.708, 'center_y':.96}
                theme_text_color:'Custom'
                text_color:(227/255, 207/255, 87/255, 255/255)
                font_size:"18sp"
                bold:True
        FloatLayout:
            MDTextField:
                id: search_field
                hint_text: "Meter Number"
                mode: "round"
                max_text_length: 20
                helper_text: "Searcn Meter"
                size_hint: .75, None
                height: "33dp"
                background_color:1, 1, 0, 1
                pos_hint: {'center_x':.5, 'center_y':.885}
        FloatLayout:
            MDIconButton:
                icon: "magnify"
                pos_hint: {"center_x":.815, "center_y": .885}
                # pos: search_field.width - self.width + dp(8), 0
                theme_text_color: "Custom"
                text_color: rgba(0,127,255,255)
                # on_release:
                    # self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    # text_field.password = False if text_field.password is True else True


